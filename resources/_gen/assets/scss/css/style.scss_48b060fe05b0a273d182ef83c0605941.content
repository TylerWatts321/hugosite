.container{margin:0 auto;width:80%}header{font-family:poppins,sans-serif;text-align:center}body{font-family:roboto,sans-serif}footer{background-color:#457b9d;text-align:center}footer>small{color:#f1faee}footer>p{color:#f1faee}.icon-bar>a{display:inside;text-align:center;padding:20px}nav{display:flex;flex-direction:column;text-align:center;background-color:#457b9d}nav>a{font-size:15px;flex:1;text-decoration:none;color:#f1faee}nav>a:hover{background-color:#f1faee;color:#000}@media only screen and (min-width:768px){nav{flex-direction:row}}.pagination{display:flex;justify-content:space-between;list-style:none;margin:1em auto;padding:0}.pagination>.page-item{border:1px solid #ddd;flex:1;text-align:center;width:5em}.pagination .page-link{display:block;color:#000;text-decoration:none}.pagination .page-link:hover{display:block;color:#000;text-decoration:none}.pagination>.page-item.active{background-color:#d72638}.pagination>.page-item.active>.page-link{color:#fff}.pagination>.page-item.disabled>.page-link{color:#ddd}@media only screen and (min-width:768px){.pagination{width:30%}}.post-box-container{display:grid;grid-template-columns:30% 30% 30%;grid-template-rows:auto;row-gap:2%;column-gap:2%;align-content:center;margin-left:6%}.post-box-container>a.button{padding:2%;box-shadow:0 20px 30px rgba(0,0,0,.1);text-decoration:none;color:initial;text-align:center;overflow:hidden}.post-list{text-align:center}a.tag{background-color:#ddd;color:#333;display:inline-block;padding:.1em;font-size:.9em;text-decoration:none}.single-project-container>.project-image>img{width:100%;height:auto;display:block;margin:0 auto;margin-top:2.5%;margin-bottom:2.5%}.project-images{display:flex;width:100%;padding:4% 2%;box-sizing:border-box;height:50vh}.box{flex:1;overflow:hidden;transition:.5s;justify-content:center;margin:0 5%;box-shadow:0 20px 30px rgba(0,0,0,.1);line-height:0}.box>img{width:100%;height:100%;object-fit:cover;transition:.5s}.box:hover{flex:1 1 100%}.box:hover>img{object-fit:fill;width:100%;height:100%}@media only screen and (min-width:768px){.project-container{display:flex}.project-container .project-images{width:50%}.project-container .project{flex:1}}.selfie>img{outline-style:solid;outline-color:#d72638;width:300px;height:auto;border-radius:50%;display:block;margin-right:auto;margin-left:auto}hr{display:block;margin-top:.5em;margin-bottom:.5em;margin-left:auto;margin-right:auto;border-style:inset;border-width:1px;color:#1d3557}h3{text-align:center}post-figure img{margin-left:auto;margin-right:auto;max-width:50%;display:block}